@import '../../common/common.wxss';

page,.main{
    height: 100%;
}
.categroy-left{
    float: left;
    width: 150rpx;
    height: auto;
    border-right: 1px solid #ddd;
    box-sizing: border-box;
}
.categroy-left .cate-list{
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
}
.categroy-left .cate-list.on{
    color: #AB956D;
    border-color: #AB956D;
}
.categroy-right{
    float: right;
    width: 600rpx;
    height: auto;
    overflow: hidden;
}
.cate-box{
    height: 100%;
    padding:10rpx;
    box-sizing: border-box;
}
.cate-box .cate-banner image{
    display: block;
    width: 100%;
    height: 190rpx;
}
.cate-title{
    position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #AB956D;
    font-size: 28rpx;
}
.cate-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}
.cate-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 4rpx;
    background: #AB956D;
}

.product-list{
    /*display: inline-block;*/
    /*width: 160rpx;*/
    width: 100%;
    height: auto;
    /*text-align: center;*/
    text-align: left;
    margin:0 20rpx 20rpx 0;
    font-size: 24rpx;
}
.pimage{
    width: 150rpx;
    height: 150rpx;
    margin-bottom: 20rpx;
}
.product-list:nth-child(3n){
    margin-right: 0;
}
.classname{
    display: inline-block;
    width: 400rpx;
    height: auto;
    margin: 10rpx;
    float: right;
}
.goods-item-name{
    vertical-align: top;
    font-size: 14px;
    font-weight:bold;
}
.goods-unit{
    display: inline;
}
.goods-item{
    font-size: 14px;
    vertical-align: top;
}
.radio-custom{
    transform:scale(0.8);
}
.checkbox-custom{
    transform:scale(0.8);
}
.goods-operation{
    position: relative;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 50rpx;
    margin-bottom: 40rpx;
    box-sizing: border-box;
    border-radius: 50rpx;
    background: #AB956D;
    color: #fff;
    font-size: 28rpx;
}
.goods-operation text{
    display: inline-block;
    height: 100rpx;
    margin-left: 250rpx;
}
.goods-operation-num{
    width: 120rpx;
}
.goods-operation-add{
    width: 60rpx;
    margin-right: 5rpx;
}
.goods-to-cart{
    width: 160rpx;
    /*padding-right: 75rpx;*/
}
.goods-cart-img{    
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.radio-group{
    text-align: center;
    display: inline-block;
    margin-left: 60px;
    margin-bottom: 20rpx;
    font-size: 14px;
}
.check-group{
    font-size: 14px;
}
.input-number{
    position: absolute;
    background: #FFF;
    width: 200rpx;
    color: #000;
    top: 25rpx;
    text-align: center;
}