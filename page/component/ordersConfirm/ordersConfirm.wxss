/* page/component/ordersConfirm/ordersConfirm.wxss */
@import '../../common/common.wxss';
.orders-header{
	margin: 20rpx;
}

.orders-sn{
	font-size: 60rpx;
	font-family: "黑体";
	font-weight: bold;
	text-align: left;
	display: inline-block;
	width: 500rpx;
}

.orders-tag{
	width: 200rpx;
	height: 80rpx;
	text-align: right;
	display: inline-block;
}

.orders-date{
	font-weight: bold;
	text-align: left;
	display: inline-block;
	width: 500rpx;
}

.orders-box{
    padding-bottom: 105rpx;
}
.orders-list{
    position: relative;
    padding:20rpx 20rpx 20rpx 220rpx;
    height: 180rpx;
    border-bottom: 1rpx solid #ededed;
}
.orders-thumb{
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    width: 180rpx;
    height: 180rpx;
}
.orders-list view{
    line-height: 60rpx;
}

.orders-footer{
	background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 95rpx;
    line-height: 95rpx;
    border-top: 1rpx solid #ededed;
}
.orders-footer .orders-footer-total{
    display: inline-block;
    width: 510rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
    color: #a55350;
}
.orders-footer .orders-footer-btn{
    display: inline-block;
    width: 240rpx;
    text-align: center;
    color: #fff;
    background: #AB956D;
}

.select-title{ 
	text-align: center;   
    width: auto;
    height: 90rpx;
    margin: 0 50rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    border-radius: 45rpx;
    background: #AB956D;
    color: #fff;
}